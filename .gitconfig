[user]
  email = vovchikzd@gmail.com
  name = Vladimir Zdorenko
[core]
  editor = nvim
  compression = 9
  whitespace = error
  preloadindex = true
[diff]
  tool = difftastic
  renames = copies
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[pager]
  difftool = true
[alias]
  dft = difftool
  lg = "log --graph --pretty=format:'%C(magenta)%h %C(white) %an %C(brightcyan)%ad%C(auto) %D%n%s%n%C(yellow)%N'"
[init]
  defaultBranch = master
[rebase]
  autoStash = true
  missingCommitsCheck = warn
  updateRefs = true
[remote "origin"]
  prune = true
[fetch]
  prune = true
[advice]
  addIgnoredFile = false
[status]
  branch = true
  showStash = true
  showUntrackedFiles = all
[push]
  autoSetupRemote = true
  default = current
[color "decorate"]
  HEAD = red
  branch = blue
  tag = yellow
  remoteBranch = magenta
[color "branch"]
  current = magenta
  local = cyan
  remote = yellow
  upstream = green
  plain = blue
[log]
	date = format:%d.%m.%Y %I:%M:%S %p
[blame]
	date = format:%d.%m.%Y %I:%M:%S %p
