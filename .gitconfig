[user]
  email = vovchikzd@gmail.com
  name = vovchikzd
[core]
  editor = nvim
  compression = 9
  whitespace = error
  preloadindex = true
  commentString = "//"
[diff]
  tool = difftastic
  renames = copies
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[pager]
  difftool = true
[init]
  defaultBranch = master
[rebase]
  autoStash = true
  updateRefs = true
  autoSquash = false
  missingCommitsCheck = warn
[remote "origin"]
  prune = true
[fetch]
  prune = true
  pruneTags = true
[advice]
  addIgnoredFile = false
[status]
  branch = true
  showStash = true
  showUntrackedFiles = all
[push]
  autoSetupRemote = true
  default = current
[color "decorate"]
  HEAD = red
  branch = blue
  tag = yellow
  remoteBranch = magenta
[color "branch"]
  current = magenta
  local = cyan
  remote = yellow
  upstream = green
  plain = blue
[log]
	date = format:%d.%m.%Y %I:%M:%S %p
[blame]
	date = format:%d.%m.%Y %I:%M:%S %p
[alias]
  dft = difftool
  lg = "log --graph --shortstat --pretty=format:'%C(magenta)%h %C(white) %an %C(brightcyan)%ad%C(auto) %D%n%s%n%C(yellow)%N'"
  sw = switch
  dt = switch --detach
  br = branch
  ba = branch -a
  mr = merge
  sq = merge --squash
